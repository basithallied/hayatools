<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="stock_card_form" model="ir.ui.view">
        <field name="name">stock.card.report</field>
        <field name="model">stock.card.report</field>
        <field name="arch" type="xml">
            <form string="Stock Card Report">
                <sheet>
                    <group string="Date Range" colspan="2">
                        <group>
                            <field name="date_from" string="From Date"/>
                        </group>
                        <group>
                            <field name="date_to" string="To Date"/>
                        </group>
                    </group>

                    <group string="Product Selection" colspan="2">
                        <field name="location_ids" widget="many2many_tags" string="Locations" options="{}"/>
                        <field name="product_ids" widget="many2many_tags" string="Products"/>
                    </group>

                    <group colspan="2" style="text-align: center; margin-top: 10px;">
                        <button name="fetch_data" string="Fetch Data" type="object" class="btn-primary btn-sm"/>
                    </group>

                    <group string="Report" colspan="2">
                        <field name="html_content" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_stock_card_report" model="ir.actions.act_window">
        <field name="name">stock.card.report</field>
        <field name="res_model">stock.card.report</field>
        <field name="view_mode">form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Stock Card Report
            </p>
        </field>
    </record>

    <menuitem id="menu_stock_card_report"
              name="Stock Card Report"
              parent="stock.menu_warehouse_report"
              action="action_stock_card_report"
              sequence="261"/>
</odoo>