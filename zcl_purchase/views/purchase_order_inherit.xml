<odoo>
    <data>

        <record id="view_latest_purchase_order_inherit_2" model="ir.ui.view">
            <field name="name">purchase.order.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='qty_received']" position="after">
                    <field name="standard_price" invisible="1" column_invisible="1"/>
                </xpath>
                <xpath expr="//page[@name='products']//field[@name='product_id']" position="after">
                    <field name="available_qty"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="vendor_balance"/>
                </xpath>
            </field>
        </record>


    </data>
</odoo>
