<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_users_form_bank_approval_access" model="ir.ui.view">
        <field name="name">res.users.form.bank.approval.access</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='access_rights']" position="inside">
                <group string="Financial Approvals">
                    <field name="is_bank_approver"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
