<odoo>

    <record id="view_rest_token_tree" model="ir.ui.view">
        <field name="name">rest_api_token.tree</field>
        <field name="model">rest_api.token</field>
        <field name="arch" type="xml">
            <list string="Document Settings">
                <field name="token"/>
                <field name="lifetime"/>
                <field name="user"/>
            </list>
        </field>
    </record>

    <record id="view_rest_token_form" model="ir.ui.view">
        <field name="name">rest_api_token.form</field>
        <field name="model">rest_api.token</field>
        <field name="arch" type="xml">
            <form string="Token">
                <sheet>
                    <group>
                        <field name="token"/>
                        <field name="lifetime"/>
                        <field name="user"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_rest_token" model="ir.actions.act_window">
        <field name="name">Tokens</field>
        <field name="res_model">rest_api.token</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_rest_token"
              name="Token"
              parent="cat_menu_rest"
              action="action_rest_token"/>

</odoo>