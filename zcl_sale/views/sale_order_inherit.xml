<odoo>
    <data>


        <record id="view_latest_sale_order_inherit_2" model="ir.ui.view">
            <field name="name">sale.order.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']//list//field[@name='product_uom_qty']" position="before">
                    <field name="available_qty"/>
                </xpath>
                <xpath expr="//field[@name='order_line']//list//field[@name='product_uom_qty']" position="after">
                    <button name="action_show_stock" type="object" icon="fa-info-circle" title="Stock Info"/>
                    <field name="standard_price"/>
                </xpath>
                <xpath expr="//group[@name='partner_details']/field[@name='partner_shipping_id']" position="after">
                    <field name="customer_balance" string="Balance"/>
                    <field name="warehouse_id"/>
                </xpath>
                <xpath expr="//page[@name='other_information']//field[@name='warehouse_id']" position="replace">
                </xpath>
            </field>
        </record>
    </data>
</odoo>
