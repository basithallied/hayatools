<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.zcl.sale</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="sale_management.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='delivery']" position="after">
                    <div class="col-12 col-lg-6 o_setting_box" id="auto_validate_delivery">
                        <div class="o_setting_left_pane">
                            <field name="auto_validate_delivery"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="auto_validate_delivery"/>
                            <div class="text-muted">
                                Automatically validate delivery orders upon sale confirmation
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
