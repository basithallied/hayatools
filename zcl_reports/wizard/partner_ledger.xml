<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_report_partner_ledger_views" model="ir.ui.view">
        <field name="name">Partner Ledger</field>
        <field name="model">account.repor.partner.ledger</field>
        <field name="inherit_id"
               ref="zcl_reports.account_common_repor_view"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='target_move']" position="after">
                    <field name="result_selection"/>
                    <field name="amount_currency" invisible="1"
                           groups="base.group_multi_currency"/>
                    <newline/>
                    <field name="reconciled"/>
<!--                    <field name="filter_residual" invisible="1"/>-->
                    <field name="partner_ids" widget="many2many_tags" invisible="1"/>
                    <field name="partner_id"  options='{"no_open": True, "no_create": True}' required="1"/>
                    <field name="this_month"/>
                    <field name="previous_month"/>
                    <field name="this_year"/>
                    <field name="previous_year"/>
                    <newline/>

                </xpath>
                 <xpath expr="//button[@name='check_report']" position="after">
                     <button name="check_report_background" class="oe_highlight"
                        string="Print" type="object"/>

                </xpath>
                <xpath expr="//button[@name='check_report']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

            </data>
        </field>
    </record>
    <record id="action_partners_leadger" model="ir.actions.act_window">
        <field name="name">Partner Ledger</field>
        <field name="res_model">account.repor.partner.ledger</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="account_report_partner_ledger_views"/>
        <field name="target">new</field>
    </record>
    <menuitem name="Partner Ledger Report"
              id="menu_partner_ledger" sequence="1"
              parent="account.menu_finance_reports"
              action="action_partners_leadger"/>
</odoo>
