<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_ist" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.ist.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='stock']" position="inside">
                <block title="Internal Stock Transfer" name="ist_settings">
                    <setting title="Default Locations" help="Set default locations for Internal Stock Transfers">
                        <div class="content-group">
                            <div class="row mt16">
                                <label for="ist_source_location_id" class="col-lg-3 o_light_label"/>
                                <field name="ist_source_location_id"/>
                            </div>
                            <div class="row">
                                <label for="ist_transit_location_id" class="col-lg-3 o_light_label"/>
                                <field name="ist_transit_location_id"/>
                            </div>
                            <div class="row">
                                <label for="ist_dest_location_id" class="col-lg-3 o_light_label"/>
                                <field name="ist_dest_location_id"/>
                            </div>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
