<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_internal_stock_transfer_tree" model="ir.ui.view">
        <field name="name">internal.stock.transfer.list</field>
        <field name="model">internal.stock.transfer</field>
        <field name="arch" type="xml">
            <list string="Internal Stock Transfers">
                <field name="name"/>
                <field name="transfer_type" widget="badge" decoration-primary="transfer_type == 'send'" decoration-info="transfer_type == 'receive'"/>
                <field name="date"/>
                <field name="source_location_id"/>
                <field name="transit_location_id"/>
                <field name="dest_location_id"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'transit'" decoration-success="state == 'done'"/>
            </list>
        </field>
    </record>

    <record id="view_internal_stock_transfer_form" model="ir.ui.view">
        <field name="name">internal.stock.transfer.form</field>
        <field name="model">internal.stock.transfer</field>
        <field name="arch" type="xml">
            <form string="Internal Stock Transfer">
                <header>
                    <button name="action_send" string="Send to Transit" type="object" class="oe_highlight" invisible="state != 'draft' or transfer_type != 'send'"/>
                    <button name="action_receive" string="Receive in Destination" type="object" class="oe_highlight" invisible="state != 'transit' or transfer_type != 'receive'"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state in ('done', 'cancel')"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,transit,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_pickings" type="object" class="oe_stat_button" icon="fa-truck" invisible="picking_count == 0">
                            <field name="picking_count" widget="statinfo" string="Transfers"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group name="locations">
                            <field name="transfer_type" readonly="state != 'draft'"/>
                            <field name="source_location_id" domain="[('usage', '=', 'internal')]" invisible="transfer_type != 'send'" required="transfer_type == 'send'" readonly="state != 'draft'"/>
                            <field name="transit_location_id" domain="[('usage', '=', 'transit')]" readonly="state != 'draft'"/>
                            <field name="dest_location_id" domain="[('usage', '=', 'internal')]" required="1" readonly="state != 'draft'"/>
                        </group>
                        <group name="info">
                            <field name="date" readonly="state != 'draft'"/>
                            <field name="user_id"/>
                            <field name="linked_transfer_id" invisible="not linked_transfer_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Products" name="lines">
                            <field name="line_ids" readonly="state != 'draft'">
                                <list editable="bottom">
                                    <field name="product_id" domain="[('type', '=', 'consu')]"/>
                                    <field name="source_qty_available" readonly="1"/>
                                    <field name="transit_qty_available" readonly="1"/>
                                    <field name="dest_qty_available" readonly="1"/>
                                    <field name="qty"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_internal_stock_transfer_send" model="ir.actions.act_window">
        <field name="name">Outgoing Transfers (Send)</field>
        <field name="res_model">internal.stock.transfer</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('transfer_type', '=', 'send')]</field>
        <field name="context">{'default_transfer_type': 'send'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new outgoing internal stock transfer.
            </p>
        </field>
    </record>

    <record id="action_internal_stock_transfer_receive" model="ir.actions.act_window">
        <field name="name">Incoming Transfers (Receive)</field>
        <field name="res_model">internal.stock.transfer</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('transfer_type', '=', 'receive')]</field>
        <field name="context">{'default_transfer_type': 'receive'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Manage incoming internal stock transfers.
            </p>
        </field>
    </record>

    <menuitem id="menu_internal_stock_transfer_root"
              name="Internal Transfers"
              parent="stock.menu_stock_root"
              sequence="25"/>

    <menuitem id="menu_internal_stock_transfer_send"
              name="Outgoing (Send)"
              parent="menu_internal_stock_transfer_root"
              action="action_internal_stock_transfer_send"
              sequence="10"/>

    <menuitem id="menu_internal_stock_transfer_receive"
              name="Incoming (Receive)"
              parent="menu_internal_stock_transfer_root"
              action="action_internal_stock_transfer_receive"
              sequence="20"/>
</odoo>
