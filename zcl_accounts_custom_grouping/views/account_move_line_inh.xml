<?xml version="1.0" encoding="utf-8"?>
<odoo>

      <record id="view_account_move_line_list_inherit" model="ir.ui.view">
        <field name="name">account.move.line.list.inherit</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sequence']" position="after">
                <field name="parent_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}" readonly="1" optional="hide"/>
                <field name="account_group_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}" readonly="1" optional="hide"/>
                <field name="account_sub_group_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}" readonly="1" optional="hide"/>
            </xpath>
        </field>
    </record>


</odoo>
